<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>ZG</Authors>
    <Description>EFCore仓储、EFCore表说明及字段说明创建</Description>
    <Copyright>VirtualUniverse</Copyright>
    <Version>1.0.0</Version>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>tool.png</PackageIcon>
    <PackageTags>VirtualUniverse、Repository、EFCore</PackageTags>
    <PackageProjectUrl>https://github.com/zhengganCN/VirtualUniverse.Util/tree/master/VirtualUniverse.Repository/VirtualUniverse.Repository.EFCore</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>G:\Softwares\VirtualUniverse.Util\VirtualUniverse.Repository\VirtualUniverse.Repository.EFCore\VirtualUniverse.Repository.EFCore.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="3.1.10" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="3.1.10" />
    <PackageReference Include="VirtualUniverse.Repository.IRepository" Version="1.0.0" />
    <PackageReference Include="VirtualUniverse.Repository.Model" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="VirtualUniverse.Repository.EFCore.xml">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
    <None Include="..\..\tool.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
